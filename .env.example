# Environment Configuration
# Copy this file to .env and customize for your setup

# Timezone
TZ=America/New_York

# User ID and Group ID (run 'id $USER' to get your values)
PUID=1000
PGID=1000

# Mullvad VPN Configuration
MULLVAD_ACCOUNT_ID=your_mullvad_account_id
MULLVAD_COUNTRY=us
MULLVAD_CITY=ny

# VPN Security Settings (DO NOT CHANGE UNLESS YOU KNOW WHAT YOU'RE DOING)
VPN_KILLSWITCH=true
VPN_FIREWALL=true
VPN_AUTOCONNECT=true

# Cloudflare Tunnel Configuration
CLOUDFLARE_TOKEN=your_cloudflare_tunnel_token
CLOUDFLARE_TUNNEL_NAME=arrstack
CLOUDFLARE_DOMAIN=yourdomain.com

# Port Configuration
PROWLARR_PORT=9696
SONARR_PORT=8989
RADARR_PORT=7878
LIDARR_PORT=8686
SABNZBD_PORT=8080
QBITTORRENT_PORT=8081
JELLYSEERR_PORT=5055
MANAGEMENT_UI_PORT=8080

# Media Paths
MEDIA_PATH=/home/ed/Media
DOWNLOADS_PATH=/home/ed/Downloads
CONFIG_PATH=/home/ed/Config

# Passwords (CHANGE THESE!)
SABNZBD_PASSWORD=sabnzbd_password
JELLYSEERR_PASSWORD=jellyseerr_password

# Advanced Configuration
# Enable/disable services (true/false)
ENABLE_PROWLARR=true
ENABLE_SONARR=true
ENABLE_RADARR=true
ENABLE_LIDARR=true
ENABLE_SABNZBD=true
ENABLE_QBITTORRENT=true
ENABLE_JELLYSEERR=true
ENABLE_CLOUDFLARE_TUNNEL=false

# Network Configuration
# Set to true if you want services accessible outside your local network
ALLOW_EXTERNAL_ACCESS=false

# Download Client Settings
# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# Disk space settings (in GB)
MIN_DISK_SPACE=10
MAX_DISK_USAGE=90

# Notification Settings
# Enable notifications for service events
ENABLE_NOTIFICATIONS=true

# API Keys (will be auto-populated after first run)
PROWLARR_API_KEY=
SONARR_API_KEY=
RADARR_API_KEY=
LIDARR_API_KEY=

# Quality Profile
# Options: standard, quality, archive
QUALITY_PROFILE=standard