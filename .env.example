# Arrmematey - Environment Configuration Example
# Copy to .env and customize as needed

# Basic Configuration (auto-filled by quick-install.sh)
PUID=1000
PGID=1000
TZ=UTC

# VPN Configuration (REQUIRED)
MULLVAD_ACCOUNT_ID=your_mullvad_account_id
MULLVAD_COUNTRY=us
MULLVAD_CITY=ny

# VPN Type: wireguard (recommended)
VPN_TYPE=wireguard

# Wireguard credentials (REQUIRED for Wireguard)
WIREGUARD_PRIVATE_KEY=your_wireguard_private_key_here
WIREGUARD_ADDRESSES=your_wireguard_address_here

# Directory Configuration
CONFIG_PATH=/data/arrmematey/Config
DOWNLOADS_PATH=/data/arrmematey/Downloads
MOVIES_PATH=/data/arrmematey/Media/Movies
TV_PATH=/data/arrmematey/Media/TV
MUSIC_PATH=/data/arrmematey/Media/Music
ADULT_PATH=/data/arrmematey/Media/Adult

# Port Configuration
MANAGEMENT_UI_PORT=8787
PROWLARR_PORT=9696
SONARR_PORT=8989
RADARR_PORT=7878
LIDARR_PORT=8686
SABNZBD_PORT=8080
QBITTORRENT_PORT=8081
JELLYSEERR_PORT=5055
EMBY_PORT=8096

# Quality Profile (standard/quality/archive)
QUALITY_PROFILE=standard

# Cloudflare Tunnel (Optional - for remote access)
# CLOUDFLARE_TOKEN=your_token_here
# CLOUDFLARE_TUNNEL_NAME=arrmematey
# CLOUDFLARE_DOMAIN=yourdomain.com

# Enable/disable services (true/false)
ENABLE_PROWLARR=true
ENABLE_SONARR=true
ENABLE_RADARR=true
ENABLE_LIDARR=true
ENABLE_SABNZBD=true
ENABLE_QBITTORRENT=true
ENABLE_JELLYSEERR=true
ENABLE_EMBY=true
ENABLE_CLOUDFLARE_TUNNEL=false